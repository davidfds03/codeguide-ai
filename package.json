{
  "name": "codeguide-ai",
  "displayName": "CodeGuide AI",
  "description": "An AI-powered VS Code extension that explains selected code using Gemini AI.",
  "version": "0.0.2",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:codeguide-ai.explainCode"
  ],
  "contributes": {
    "commands": [
      {
        "command": "codeguide-ai.explainCode",
        "title": "Explain Selected Code"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CodeGuide AI Settings",
      "properties": {
        "codeguide-ai.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Gemini API key for CodeGuide AI."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.102.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "node-fetch": "^3.3.2"
  }
}
